

<div class="card mb-3 {% if contact.sexe == 0%}
        border-info
        {% else %}
        border-warning
        {% endif %}">
    <h4 class="card-title text-center">{{contact.nom}} {{contact.prenom}}</h4>
    <img style="height: auto; max-width: 200px; display: block; border-radius:60px" src="{{contact.avatar}}" class="avatar mx-auto my-3" alt="image avatar">
    <ul class="list-group list-group-flush border: solid 1px black border-radius: 10px;">
        <li class="list-group-item ">{{contact.rue}}</li>
        <li class="list-group-item">{{contact.cp}}</li>
        <li class="list-group-item">{{contact.ville}}</li>
        <li class="list-group-item">{{contact.mail}}</li>
        <li class="list-group-item">
        {%if contact.sexe == 0%}
        <p class="badge text-bg-info">homme</p>
        {% else %}
        <p class="badge text-bg-warning">femme</p>
        {%endif%}</li>
        {% if mode == 'listeContacts'%}
         <li class="list-group-item">
            <a style="{% if contact.categorie.libelle == 'privé' %} color:red 
            {% elseif contact.categorie.libelle == 'sport'%} color:white
            {% else %} color:orange 
            {% endif %}"
            href="{{path('ficheCategorie', {'id':contact.categorie.id})}}">{{contact.categorie.libelle}}</a>
        </li>
        {%  endif %}
        <li class="list-group-item card-body"> <a href="{{path('contact', {'id':contact.id})}}" class="btn btn-success btn-block text-center w-100">Détails...</a>
        </li>
    </ul>
</div>